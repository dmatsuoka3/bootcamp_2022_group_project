<body>
    <div class="information">
        <!-- <div class="overlay"></div> -->
        <img src="images/mobile.png" alt="mobile" class="mobile">
        <div id="circle">
            <div class="feature one">

            </div>
        </div>
    </div>
    <div class="container">
        <form class="form form--hidden" id="login" action="/login" method="post">
            <h1 class="form__title">PhotoSnap</h1>
            <div class="form__message form__message--error"></div>

            <div class="form__input-group">
                <input type="text" class="form__input" name="username" autofocus placeholder="Username">
            </div>

            <div class="form__input-group">
                <input type="password" class="form__input" name="password" autofocus placeholder=" Password">
                <div class="form__input-error-message"></div>
            </div>

            <button class="form__button" type="submit">Login</button>
            <div class="text">
                <p>Or</p>
            </div>
